# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000

# OpenAI API key for text generation
OPENAI_API_KEY=
# Optional model overrides
OPENAI_MODEL=gpt-4o-mini
OPENAI_IMAGE_DETAIL=low

# Etsy API credentials and settings
ETSY_CLIENT_ID=
ETSY_CLIENT_SECRET=
# Must match the Redirect URI registered in Etsy app settings
ETSY_REDIRECT_URI=http://localhost:8000/api/etsy/auth/callback
# Required scopes for listing management
ETSY_SCOPES="listings_r listings_w shops_r"

# Default shop/listing parameters
ETSY_SHOP_ID=61611464
ETSY_TAXONOMY_ID=2078
ETSY_DEFAULT_PRICE=5.00
ETSY_DEFAULT_QUANTITY=10
# Comma-separated materials to set on listing
ETSY_MATERIALS=A3,A4,A5,Digital Download,High Resolution JPG,Printable File,Instant Download,Printable Poster
# Default attributes
ETSY_ORIENTATION=vertical
ETSY_PIECES_INCLUDED=1
